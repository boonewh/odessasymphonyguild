# Odessa Symphony Guild - Environment Variables
# Copy this file to .env.local and fill in your values

# ====================
# QuickBooks Online Integration
# ====================
# Leave blank to run in MOCK MODE for testing/demo
# Get these from: https://developer.intuit.com/app/developer/qbo/docs/get-started

QUICKBOOKS_CLIENT_ID=
QUICKBOOKS_CLIENT_SECRET=
QUICKBOOKS_REALM_ID=
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# ====================
# Feature Flags
# ====================
# Set to 'true' to enable real QuickBooks sync (requires QB credentials above)
ENABLE_QUICKBOOKS_SYNC=false

# Set to 'false' to enable real payment processing
# When 'true', form submissions work but no actual charges are made
MOCK_PAYMENT_MODE=true

# Enable email notifications for new memberships
ENABLE_EMAIL_NOTIFICATIONS=false

# ====================
# Email Configuration (Optional)
# ====================
# If using email notifications, configure one of these services:

# Resend (recommended)
RESEND_API_KEY=

# SendGrid
SENDGRID_API_KEY=

# AWS SES
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email sender address
EMAIL_FROM=membership@odessasymphonyguild.org

# ====================
# Admin Access (Optional)
# ====================
# Simple password for viewing mock membership submissions
# In production, use a proper authentication system
ADMIN_PASSWORD=

# ====================
# Next.js Configuration
# ====================
# Your production URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000
